{
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["../../packages/db/**"]
      }
    }
  ],
  "routes": [
    { "src": "/.*", "dest": "/src/index.ts" }
  ],
  "installCommand": "cd ../.. && npm install",
  "buildCommand": "npm run build"
}
